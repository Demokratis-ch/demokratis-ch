<div class="modification-button relative {% if selected|default(false)%}border-2 border-blue-400 m-[-1px]{% endif %} p-2 border bg-white hover:bg-gray-50 rounded-lg text-sm text-gray-500">
    <a class="cursor-pointer after:absolute after:inset-0" data-action="click->live#action" data-action-name="selectModification(modificationId={{ modification.id }})">
        <div class="flex flex-row flex-nowrap">
            <div class="flex-grow overflow-ellipsis overflow-hidden whitespace-nowrap">
                {{ modification.createdBy }}
            </div>
            <div class="text-xs text-gray-300">#{{ modification.uuid[:3] }}</div>
        </div>
        <div class="flex flex-row flex-nowrap">
            <p class="flex-grow text-xs text-gray-300">{{ modification.createdAt|ago }}</p>
            {% if chosen|default(false) %}<div><i class="fa-regular fa-circle-check text-blue-400"></i></div>{% endif %}
        </div>
    </a>
</div>
