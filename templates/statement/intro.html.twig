{% extends 'layout-default.html.twig' %}

{% block title %}Vernehmlassungsantwort{% endblock %}

{% block body %}

    {% set consultation = statement.consultation %}

    {# Consultation header #}
    {% include 'consultation/__header.html.twig' %}

    {# Consultation navigation #}
    {% include 'consultation/__menu.html.twig' %}

    {# Main section #}
    <section class="bg-gray-50 mt-8 pt-4 pb-6">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pb-6 md:pb-12 my-4">

            {# Header #}
            <a href="{{ path('app_consultation_show_statements', { 'slug': statement.consultation.slug }) }}"
               class="text-sm text-gray-400 hover:text-gray-900"><i class="fa-regular fa-arrow-left mr-2"></i> Ãœbersicht der Stellungnahmen anzeigen</a>

            <div class="md:flex items-baseline justify-between ">
                <div class="pt-6">
                    <h1 class="text-3xl font-bold tracking-tight text-gray-600 break-all md:break-normal">
                        {{ statement.name }}
                    </h1>
                    {% if statement.justification is defined and statement.justification is not null %}
                        <p class="text-md text-gray-400 break-all md:break-normal">
                            {{ statement.justification }}
                        </p>
                    {% endif %}
                </div>
            </div>

            {{ form_start(form) }}
                {{ form_row(form.intro) }}
                <div class="flex gap-2">
                    <a href="{{ path('app_statement_show', { 'uuid': statement.uuid }) }}" class="inline-flex items-center rounded-md border border-gray-300 bg-gray-100 px-4 py-2 text-sm font-medium text-gray-500 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">Abbrechen</a>
                    {{ form_row(form.submit) }}
                </div>
            {{ form_end(form) }}

        </div>

    </section>
{% endblock %}
