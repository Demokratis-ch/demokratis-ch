{% extends 'base.html.twig' %}

{% block htmlbody %}
    <!-- Body -->
    <div class="md:pt-12">
        {% block body %}{% endblock %}
    </div>
    <!-- Footer -->
    <footer class="bg-white mx-8 mt-2 md:mt-14 pt-4 pb-8" aria-labelledby="footer-heading">
        <h2 id="footer-heading" class="sr-only">Footer</h2>
        <div class="mx-auto max-w-7xl pb-8 lg:px-8 pt-10 sm:pt-12 lg:pt-16">
            <div class="border-t-2 border-gray-100 pt-4 sm:pt-6 lg:pt-10 xl:grid xl:grid-cols-3 xl:gap-8">
                <div class="grid grid-cols-2 gap-8 xl:col-span-2">
                    <div class="md:grid md:grid-cols-2 md:gap-8">
                        <div>
                            <h3 class="text-sm font-semibold leading-6 text-gray-600">Vernehmlassungen</h3>
                            <ul role="list" class="mt-6 space-y-2">
                                <li>
                                    <a href="{{ path('app_consultation') }}" class="text-sm leading-6 text-gray-500 hover:text-gray-900">Alle</a>
                                </li>

                                <li>
                                    <a href="{{ path('app_consultation', { 'filter': 'planned' }) }}" class="text-sm leading-6 text-gray-500 hover:text-gray-900">Geplant</a>
                                </li>

                                <li>
                                    <a href="{{ path('app_consultation', { 'filter': 'ongoing' }) }}" class="text-sm leading-6 text-gray-500 hover:text-gray-900">Laufend</a>
                                </li>

                                <li>
                                    <a href="{{ path('app_consultation', { 'filter': 'done' }) }}" class="text-sm leading-6 text-gray-500 hover:text-gray-900">Abgeschlossen</a>
                                </li>
                            </ul>
                        </div>
                        <div class="mt-10 md:mt-0">
                            <h3 class="text-sm font-semibold leading-6 text-gray-600">Informationen</h3>
                            <ul role="list" class="mt-6 space-y-2">
                                <li>
                                    <a href="{{ path('app_index_info', { '_fragment': 'what' }) }}" class="text-sm leading-6 text-gray-500 hover:text-gray-900">Was ist eine Vernehmlassung?</a>
                                </li>

                                <li>
                                    <a href="{{ path('app_index_info', { '_fragment': 'who' }) }}" class="text-sm leading-6 text-gray-500 hover:text-gray-900">Wer darf sich beteiligen?</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="md:grid md:grid-cols-2 md:gap-8">
                        <div>
                            <h3 class="text-sm font-semibold leading-6 text-gray-600">Kontakt</h3>
                            <ul role="list" class="mt-6 space-y-2">

                                <li>
                                    <a href="{{ path('app_membership_join') }}" class="text-sm leading-6 text-gray-500 hover:text-gray-900">Verein</a>
                                </li>

                                <li>
                                    <a href="{{ path('app_index_contact') }}" class="text-sm leading-6 text-gray-500 hover:text-gray-900">Kontakt</a>
                                </li>

                                <li>
                                    <a href="{{ path('app_index_terms') }}" class="text-sm leading-6 text-gray-500 hover:text-gray-900">Nutzungsbedingungen</a>
                                </li>
                            </ul>
                        </div>

                    </div>
                </div>
                <div class="mt-10 xl:mt-0">
                    <h3 class="text-sm font-semibold leading-6 text-gray-600">Newsletter abonnieren</h3>
                    <p class="mt-2 text-sm leading-6 text-gray-600">Lass Deine Mail-Adresse da, um über den Projektfortschritt informiert zu werden.</p>

                    {{ render(controller(
                        'App\\Controller\\NewsletterController::subscribe'
                    )) }}

                    <p class="mt-2 text-xs leading-6 text-gray-400">Wir nehmen Datenschutz ernst und kommunizieren zurückhaltend.</p>
                </div>
            </div>
            <div class="mt-16 border-t border-gray-900/10 pt-8 sm:mt-20 md:flex md:items-center md:justify-between lg:mt-24">
                <div class="flex space-x-6 md:order-2">

                    <a href="https://github.com/demokratis-ch/demokratis-ch" target="_blank" class="text-gray-400 hover:text-gray-500">
                        <span class="sr-only">GitHub</span>
                        <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
