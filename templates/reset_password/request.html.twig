{% extends 'layout-default.html.twig' %}

{% block title %}Passwort zurücksetzen{% endblock %}

{% block body %}

    <div class="bg-gray-50 flex flex-col justify-center py-12 lg:py-24 xl:py-36 2xl:py-48 sm:px-6 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
            <h2 class="mt-8 text-center text-3xl font-extrabold text-gray-900">
                Passwort zurücksetzen
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                Oder zurück zum
                {% if app.user %}
                    <a href="{{ path('app_user') }}" class="text-blue-600 hover:text-blue-500">
                        Profil
                    </a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="text-blue-600 hover:text-blue-500">
                        Login
                    </a>
                {% endif %}
            </p>
        </div>

        <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
            <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
                <!-- Reset Error -->
                {% for flashError in app.flashes('reset_password_error') %}
                    <div class="rounded-md bg-red-50 p-4">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <!-- Heroicon name: solid/x-circle -->
                                <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <h3 class="text-sm font-medium text-red-800">
                                    Fehler
                                </h3>
                                <div class="text-sm text-red-700">
                                    <p>
                                        {{ flashError }}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}

                {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <div class="mt-2 text-sm text-gray-500">
                    Wir senden eine E-Mail mit einem Reset-Link.
                </div>

                <button class="mt-4 w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Mail anfordern</button>
                {{ form_end(requestForm) }}

            </div>
        </div>
    </div>

{% endblock %}
