
{% extends 'layout-default.html.twig' %}

{% block title %}Passwort zurücksetzen{% endblock %}

{% block body %}

    <div class="bg-gray-50 flex flex-col justify-center py-12 lg:py-24 xl:py-36 2xl:py-48 sm:px-6 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
            <h2 class="mt-8 text-center text-3xl font-extrabold text-gray-900">
                Passwort zurücksetzen
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                Noch keinen Account?
                Jetzt <a href="mailto:fabian@demokratis.ch" class="text-blue-600 hover:text-blue-500">
                    Invite anfragen
                </a>
            </p>
        </div>

        <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
            <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">

                {{ form_start(resetForm) }}
                {{ form_row(resetForm.plainPassword) }}
                <button class="mt-6 w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Passwort zurücksetzen</button>
                {{ form_end(resetForm) }}

            </div>
        </div>
    </div>



{% endblock %}
