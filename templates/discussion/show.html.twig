{% extends 'layout-default.html.twig' %}

{% block title %}
    {{ discussion.topic }}
{% endblock %}

{% block body %}
    <div class="bg-white">
        <div>

            {% set consultation = discussion.consultation %}

            {# Consultation header #}
            {% include 'consultation/__header.html.twig' %}

            {# Consultation navigation #}
            {% include 'consultation/__menu.html.twig' %}

            <section class="bg-gray-50 mt-8 mx-8 pt-4 pb-6">
                <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-2 pb-6">

                    <a href="{{ path('app_consultation_index_discussion', { 'slug': consultation.slug }) }}" class="text-sm text-gray-400 hover:text-gray-900"><i class="fa-regular fa-arrow-left mr-2"></i>Zurück zur Diskussionsübersicht</a>

                    <h2 class="mt-4 text-xl text-gray-400 font-medium">{{ discussion.topic }}</h2>
                    <div class="mt-2 bg-white p-4 border border-gray-100 rounded-md text-gray-700 shadow-sm">
                        {{ component('comment', { 'thread': discussion.thread, 'more': true }) }}
                    </div>
                </div>

            </section>

        </div>
    </div>

{% endblock %}
