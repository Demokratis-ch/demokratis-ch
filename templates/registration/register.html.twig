{% extends 'layout-default.html.twig' %}

{% block title %}Registrierung{% endblock %}

{% block body %}

    <div class="bg-gray-50 flex flex-col justify-center py-12 lg:py-24 xl:py-36 2xl:py-48 sm:px-6 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
            <h2 class="mt-8 text-center text-3xl font-extrabold text-gray-900">
                Registrierung
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                Bereits registriert?
                <a href="{{ path('app_login') }}" class="text-blue-600 hover:text-blue-500">
                    Zur Anmeldung
                </a>
            </p>
        </div>

        <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
            <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
                <!-- Reset Error -->
                {% for flashError in app.flashes('verify_email_error') %}
                    <div class="rounded-md bg-red-50 p-4">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <!-- Heroicon name: solid/x-circle -->
                                <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <h3 class="text-sm font-medium text-red-800">
                                    Fehler
                                </h3>
                                <div class="text-sm text-red-700">
                                    <p>
                                        {{ flashError }}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}

                {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword) }}
                    <div class="flex items-center mt-4">
                        {# Remember me functionality, see https://symfony.com/doc/6.0/security/remember_me.html #}
                        {{ form_widget(registrationForm.agreeTerms) }}
                        {{ form_label(registrationForm.agreeTerms) }}
                    </div>
                    <button type="submit" class="mt-4 w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Registrieren</button>
                    <div class="mt-4 text-sm text-gray-500 text-center">
                        Mit der Registrierung werden unsere <a href="#" class="text-blue-600 hover:text-blue-500">Nutzungsbedingungen</a> akzeptiert.
                    </div>
                {{ form_end(registrationForm) }}

            </div>
        </div>
    </div>

{% endblock %}
