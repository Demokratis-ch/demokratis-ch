{% extends 'layout-default.html.twig' %}

{% block title %}Organisationsprofile{% endblock %}

{% block body %}
<main class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="pt-16 pb-6">

        {# Breadcrumbs #}
        <nav class="flex py-4 sm:pt-6 lg:pt-8" aria-label="Breadcrumb">
            <ol role="list" class="flex items-center space-x-4">
                <li>
                    <div>
                        <a href="{{ path('app_index') }}" class="text-gray-400 hover:text-gray-500">
                            <i class="fa-solid fa-house"></i>
                            <span class="sr-only">Home</span>
                        </a>
                    </div>
                </li>

                <li>
                    <div class="flex items-center">
                        <i class="fas fa-chevron-right text-xs text-gray-400"></i>
                        <a href="{{ path('app_organisation_index') }}" class="ml-4 text-sm font-medium text-gray-500 hover:text-gray-700">Organisationen</a>
                    </div>
                </li>
            </ol>
        </nav>

        <h1 class="text-2xl sm:text-3xl md:text-4xl xl:text-6xl font-bold tracking-tight text-gray-700">Organisationen</h1>
        <div class="mt-12 bg-gray-100 py-4 px-12">
            <ul role="list" class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">

                {% for organisation in organisations %}
                    {% include('organisation/organisation_item.html.twig') with {organisation} only %}
                {% else %}
                    <p class="mx-auto text-gray-400 text-md">Es gibt noch keine Organisationsprofile</p>
                {% endfor %}

            </ul>
        </div>
    </div>
</main>
{% endblock %}
