{% form_theme form with ['partials/_tailwind_form.html.twig'] only %}

<div data-turbo="false">

{% if (app.flashes | length) > 0 %}
    {% for label, messages in app.flashes(['success-contacted']) %}
        <div class="rounded-md bg-green-50 border border-green-200 border-solid p-4">
            <div class="flex">
                <div class="flex-shrink-0">
                    <!-- Heroicon name: solid/check-circle -->
                    <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-green-800">Erfolgreich eingetragen</p>
                </div>
            </div>
        </div>
    {% endfor %}
{% else %}
    <div class="w-full">
    {{ form_start(form, { 'attr' : { 'class': 'mt-6' } }) }}
        {{ form_row(form.email, { 'attr': { 'class': 'min-w-0 appearance-none rounded-md border-0 bg-white px-3 py-1.5 text-base leading-7 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:w-64 sm:text-sm sm:leading-6 xl:w-full' } }) }}
        {{ form_row(form.submit, { 'label': 'Abonnieren', 'attr': { 'class': 'w-full items-center justify-center rounded-md bg-blue-600 py-2 px-3 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600' } }) }}
    {{ form_rest(form) }}
    {{ form_end(form) }}
    </div>
{% endif %}

</div>