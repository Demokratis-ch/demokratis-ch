{% if consultation.status == 'planned' %}
{% else %}
    <nav id="menu" class="mt-4 md:scroll-mt-32 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="">
            <div class="border-b border-gray-200">
                <nav class="-mb-px flex overflow-x-auto gap-4" aria-label="Tabs">

                    {% if consultation.singleStatement is null %}
                        <a href="{{ path('app_consultation_show_statements', { 'slug': consultation.slug, '_fragment': 'menu' }) }}" class="
                            {% if app.current_route == 'app_consultation_show_statements' %}border-blue-500 text-blue-600
                            {% elseif app.current_route == 'app_statement_new' %}border-blue-500 text-blue-600
                            {% elseif app.current_route == 'app_statement_show' %}border-blue-500 text-blue-600
                            {% elseif app.current_route == 'app_external_statement_new' %}border-blue-500 text-blue-600
                            {% elseif app.current_route == 'app_external_statement_show' %}border-blue-500 text-blue-600
                            {% else %}border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300{% endif%} w-full md:w-1/4 py-4 px-1 text-center border-b-2 font-medium text-sm">Stellungnahmen</a>
                    {% else %}
                        <a href="{{ path('app_statement_show', { 'uuid': consultation.singleStatement.uuid, '_fragment': 'menu' }) }}" class="{% if app.current_route == 'app_statement_show' %}border-blue-500 text-blue-600{% else %}border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300{% endif%} w-full md:w-1/4 py-4 px-1 text-center border-b-2 font-medium text-sm">Stellungnahme</a>
                    {% endif %}

                    {% if (consultation.legalTexts|length > 0) and (consultation.singleStatement is null) %}
                        <a href="{{ path('app_consultation_show_legal', { 'slug': consultation.slug, '_fragment': 'menu' }) }}" class="{% if app.current_route == 'app_consultation_show_legal' %}border-blue-500 text-blue-600{% else %}border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300{% endif%} w-full md:w-1/4 py-4 px-1 text-center border-b-2 font-medium text-sm">Vernehmlassungsvorlage</a>
                    {% endif %}

                    {% if consultation.singleStatement is null %}
                        <a href="{{ path('app_consultation_show_documents', { 'slug': consultation.slug, '_fragment': 'menu' }) }}" class="{% if app.current_route == 'app_consultation_show_documents' %}border-blue-500 text-blue-600{% else %}border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300{% endif%} w-full md:w-1/4 py-4 px-1 text-center border-b-2 font-medium text-sm">Dokumente</a>
                    {% endif %}

                    <a href="{{ path('app_consultation_index_discussion', { 'slug': consultation.slug, '_fragment': 'menu' }) }}" class="
                        {% if app.current_route == 'app_consultation_index_discussion' %}border-blue-500 text-blue-600
                        {% elseif app.current_route == 'app_discussion_show'  %}border-blue-500 text-blue-600
                        {% elseif app.current_route == 'app_discussion_add' %}border-blue-500 text-blue-600
                        {% else %}border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300{% endif%} w-full md:w-1/4 py-4 px-1 text-center border-b-2 font-medium text-sm">
                        Diskussion
                    </a>

                    <a href="{{ path('app_consultation_index_media', { 'slug': consultation.slug, '_fragment': 'menu' }) }}" class="
                        {% if app.current_route == 'app_consultation_index_media' %}border-blue-500 text-blue-600
                        {% elseif app.current_route == 'app_media_show'  %}border-blue-500 text-blue-600
                        {% elseif app.current_route == 'app_media_add' %}border-blue-500 text-blue-600
                        {% else %}border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300{% endif%} w-full md:w-1/4 py-4 px-1 text-center border-b-2 font-medium text-sm">
                        Medien
                    </a>
                </nav>
            </div>
        </div>
    </nav>
{% endif %}

