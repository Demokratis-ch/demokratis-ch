<div>
    {% if consultation.humanTitle is defined and consultation.humanTitle is not null %}
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 break-all md:break-normal">
            {{ consultation.humanTitle }}
        </h1>
        <h2 class="mt-2 text-gray-400 text-md font-normal max-w-5xl break-all md:break-normal">{{ consultation.title }}</h2>
    {% else %}
        <h1 class="text-2xl md:text-4xl font-bold tracking-tight text-gray-900 break-all md:break-normal">
            {{ consultation.title }}
        </h1>
    {% endif %}
    <p class="mt-4 text-gray-400 text-sm font-normal">{{ consultation.office|default('unknown') }} / {{ consultation.institution|default('unknown') }}</p>
    {% if consultation.startDate is defined and consultation.startDate is not null and consultation.endDate is defined and consultation.endDate is not null %}
        <p class="mt-1 text-gray-400 text-sm font-normal">Die Vernehmlassung l√§uft vom {{ consultation.startDate|format_datetime('long', 'none', locale='de')|default('') }} bis {{ consultation.endDate|format_datetime('long', 'none', locale='de')|default('') }}</p>
    {% endif %}
</div>
