<div {{ attributes }}>
    <div>
        {% if is_granted('vote', comment) %}
            <div class="opacity-50 absolute right-0 mt-1 mr-1 text-gray-300 text-xs">
                <button
                        type="button"
                        class="bg-gray-200 p-1 border border-gray-300 hover:bg-gray-300 hover:border-gray-400 rounded-lg"
                        data-action="live#action"
                        data-action-name="vote(input=down, comment={{ comment.id }})"
                >
                    ğŸ‘
                </button>
                <button
                        type="button"
                        class="bg-gray-200 p-1 border border-gray-300 hover:bg-gray-300 hover:border-gray-400 rounded-lg"
                        data-action="live#action"
                        data-action-name="vote(input=up, comment={{ comment.id }})"
                >
                    ğŸ‘
                </button>
            </div>
        {% else %}
            {% if comment.votes|length > 0 %}
                {% set up = 0 %}
                {% set down = 0 %}
                {% for opinion in comment.votes %}
                    {% if opinion.vote == 'up' %}
                        {% set up = up + 1 %}
                    {% elseif opinion.vote == 'down' %}
                        {% set down = down + 1 %}
                    {% endif %}
                {% endfor %}
                <div class="opacity-50 absolute right-0 mt-1 mr-1 text-gray-300 text-xs">
                    {{ down }}  ğŸ‘
                    {{ up }} ğŸ‘
                </div>
            {% endif %}

        {% endif %}
    </div>
</div>




